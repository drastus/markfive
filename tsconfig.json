{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./source",
    "esModuleInterop": true,
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "compileOnSave": true
}

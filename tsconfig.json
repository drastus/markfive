{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable",
			"ScriptHost"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"noUncheckedIndexedAccess": true,
		"outDir": "./lib",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES6"
	},
	"compileOnSave": true
}
